<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<HBox alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DataPyramid.controller.MainController"
    prefWidth="800" prefHeight="530">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>

    <HBox alignment="TOP_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">

        <!-- Navbar -->
        <VBox id="nav-bar" fx:id="navigationBar" alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308" minWidth="100" style=" -fx-background-color: #CAD8B3;"
              styleClass="nav-bar">
            <VBox alignment="CENTER">
                <children>
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@images/R.png"/>
                        </image>
                    </ImageView>
                    <Label style="-fx-text-fill: grey;" text="Balance Buddy"/>
                </children>
                <VBox.margin>
                    <Insets top="-120" bottom="60"/>
                </VBox.margin>
            </VBox>

            <ToggleButton fx:id="homeButton" minHeight="40" minWidth="100" onAction="#onHomeButtonClick"
                           styleClass="nav-button" text="Home" />
             <ToggleButton fx:id="insightButton" minHeight="40" minWidth="100" onAction="#onInsightsButtonClick"
                           styleClass="nav-button" text="Insights" />
             <ToggleButton fx:id="timelimitButton" minHeight="40" minWidth="100" onAction="#onTimeLimitsButtonClick"
                           styleClass="nav-button" text="Time Limits" />
             <ToggleButton fx:id="newAppButton" minHeight="40" minWidth="100" onAction="#onNewAppButtonClick"
                           styleClass="nav-button" text="Add Program" />
             <Button fx:id="logoutButton" minHeight="40" minWidth="100" onAction="#onLogoutButtonClick"
                     styleClass="nav-button" text="Log Out" />
         <padding>
            <Insets bottom="50.0" top="50.0" />
         </padding>
        </VBox>
   
       <!-- main-view content -->
       <StackPane HBox.hgrow="ALWAYS">
   
           <!-- Home -->
           <HBox fx:id="homeContent">
               <VBox HBox.hgrow="ALWAYS">
                   <Label id="headlines" text="Overview" VBox.vgrow="SOMETIMES">
                  <VBox.margin>
                     <Insets bottom="10.0" top="20.0" />
                  </VBox.margin>
               </Label>
                   <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                       <VBox prefHeight="230" spacing="10"
                             style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 10px;"
                             HBox.hgrow="ALWAYS">
                           <Label style="-fx-text-fill: grey;" text="Today" />
                           <Label fx:id="totalTimeLabel" style="-fx-font-size: 25px"
                                  HBox.hgrow="ALWAYS"/>
                           <Label style="-fx-text-fill: grey;" text="Chart for today's usage (Insights content has chart for weekly usage)" />
                       </VBox>
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                   </HBox>
                    <Label id="headlines" text="Most Used Apps Today" VBox.vgrow="ALWAYS">
                  <VBox.margin>
                     <Insets bottom="10.0" top="20.0" />
                  </VBox.margin>
               </Label>
                    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                        <VBox prefHeight="120" prefWidth="153" spacing="10"
                              style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              HBox.hgrow="ALWAYS">
      
                                     <!-- Add content here -->
                            <Label fx:id="firstAppLabel" />
                            <Label fx:id="firstTimeLabel" style="-fx-text-fill: grey;" />
      
                                 </VBox>
                        <VBox prefHeight="120" prefWidth="153" spacing="10"
                              style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              HBox.hgrow="ALWAYS">
      
                                     <!-- Add content here -->
                            <Label fx:id="secondAppLabel" />
                            <Label fx:id="secondTimeLabel" style="-fx-text-fill: grey;" />
      
                                 </VBox>
                        <VBox prefHeight="120" prefWidth="153" spacing="10"
                              style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              HBox.hgrow="ALWAYS">
      
                                     <!-- Add content here -->
                            <Label fx:id="thirdAppLabel" />
                            <Label fx:id="thirdTimeLabel" style="-fx-text-fill: grey;" />
                        </VBox>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                    </HBox>
               </VBox>
           </HBox>


           <!-- Insights Content -->
           <VBox fx:id="insightsContent" visible="false" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
                   <VBox VBox.vgrow="ALWAYS">
                       <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <Button fx:id="columnChartButton" onAction="#onColumnChartButtonClick"
                                   text="Column Chart" HBox.hgrow="SOMETIMES" />
                           <Button fx:id="pieChartButton" onAction="#onPieChartButtonClick"
                                   text="Pie Chart" HBox.hgrow="SOMETIMES" />
                           <Button fx:id="barChartButton" onAction="#onBarChartButtonClick"
                                   text="Bar Chart" HBox.hgrow="SOMETIMES" />
                           <VBox.margin>
                               <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                       </HBox>
                       <HBox fx:id="graphLocation" maxHeight="280.0" minHeight="280.0" maxWidth="1.7976931348623157E308"
                             spacing="10" style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                             stylesheets="@stylesheet.css" VBox.vgrow="ALWAYS">
                           <Label text="{Type of Chart}" />
                           <VBox.margin>
                               <Insets />
                           </VBox.margin>
                       </HBox>

                       <Label id="headlines" text="Tracked Apps">
                           <VBox.margin>
                               <Insets top="20.0" />
                           </VBox.margin>
                       </Label>
                       <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background-insets: 0;">
                           <VBox spacing="5.0" VBox.vgrow="ALWAYS" prefHeight="140">
                               <VBox fx:id="programList" spacing="10.0" VBox.vgrow="ALWAYS">
                                   <padding>
                                       <Insets top="10.0" />
                                   </padding>
                               </VBox>
                           </VBox>
                       </ScrollPane>
                   </VBox>
           </VBox>


           <!-- Time Limits Content -->
           <VBox fx:id="timeLimitsContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" visible="false">
               <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                   <Label id="headlines" text="Screen Time Limit" underline="true" VBox.vgrow="SOMETIMES">
                  <VBox.margin>
                     <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
               </Label>
                   <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10"
                         style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" VBox.vgrow="ALWAYS">
                       <Label text="{Some Info}" HBox.hgrow="ALWAYS" />
   
                       <!-- Add content here -->
   
                   </HBox>
                   <Label id="headlines" text="App Time Limit" underline="true">
                  <VBox.margin>
                     <Insets bottom="5.0" top="10.0" />
                  </VBox.margin>
               </Label>
                   <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10"
                         style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" VBox.vgrow="ALWAYS">

                    <!-- Add content here -->

                </HBox>
                   <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10"
                         style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" VBox.vgrow="ALWAYS">

                    <!-- Add content here -->

                </HBox>
                   <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10"
                         style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" VBox.vgrow="ALWAYS">

                    <!-- Add content here -->

                </HBox>
               </VBox>
            <padding>
               <Insets bottom="10.0" top="20.0" />
            </padding>
           </VBox>
   
           <!-- Add Program Content -->
           <VBox fx:id="addProgramContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 spacing="10.0" visible="false">
               <Label id="headlines" text="Add New Program" underline="true" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
               <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                   <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="ALWAYS">
                       <ListView fx:id="processListView" VBox.vgrow="ALWAYS" />
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
                   </VBox>
                   <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                       <VBox>
                           <Region prefHeight="20" />
                           <Label styleClass="instruction" text="Program Type:" />
                           <ChoiceBox fx:id="typeChoiceBox" />
                           <Region prefHeight="10" />
                           <Label styleClass="instruction" text="Time Limit in minutes (0 if unlimited):" />
                           <TextField fx:id="appLimitField" maxWidth="250" prefHeight="30" text="0" />
                           <Region prefHeight="10" />
                           <CheckBox fx:id="isTrack" styleClass="instruction" text="Track Now?" />
                       </VBox>
                       <Label fx:id="errorLabel" styleClass="error-label" />
                       <HBox alignment="BOTTOM_LEFT">
                           <Button id="addAppButton" onAction="#onAddAppButtonClick" text="Add Application" />
                           <Button id="removeAllButton" onAction="#onRemoveAllButtonClick" text="Remove All Applications" />
                       </HBox>
                   </VBox>
               </HBox>
            <StackPane.margin>
               <Insets bottom="10.0" top="10.0" />
            </StackPane.margin>
           </VBox>
       </StackPane>

        <!-- RHS Panel -->
        <VBox alignment="CENTER" minWidth="170" prefWidth="170" spacing="10.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
             <Label fx:id="welcomeLabel" text="Hello, {firstname}!" VBox.vgrow="ALWAYS">
                 <VBox.margin>
                    <Insets bottom="10.0" top="30.0" />
                 </VBox.margin>
            </Label>
            <Line endX="100" endY="0" startX="0" startY="0" stroke="grey" strokeWidth="0.5" VBox.vgrow="ALWAYS" />
            <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-padding:15px; -fx-background-color: white;" VBox.vgrow="ALWAYS">
                <Label style="-fx-text-fill: grey;" text="Apps" />
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>
                <ScrollPane style="-fx-background-color: white;" fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                        <VBox fx:id="rightNavbar" alignment="TOP_LEFT" spacing="10.0" style="-fx-padding:0; -fx-background-color: white;">
                            <padding>
                                <Insets top="10.0"  />
                            </padding>
                        </VBox>
                </ScrollPane>
            </VBox>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
        </VBox>
    </HBox>
</HBox>
