<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.ToggleButton?>
<?import java.net.URL?>

<?import javafx.scene.control.TextField?>
<HBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DataPyramid.controller.MainController">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>

    <!-- Navbar -->
    <HBox alignment="TOP_LEFT">
        <VBox spacing="30.0" style=" -fx-background-color: #CAD8B3;" prefWidth="100" prefHeight="530"
              alignment="TOP_CENTER">
            <Region prefHeight="10" />
            <Label text="LOGO?"/>
            <Region prefHeight="40" />
            <VBox alignment="CENTER">
                <ToggleButton fx:id="homeButton" text="Home" onAction="#onHomeButtonClick" styleClass="nav-button"
                              minWidth="100" minHeight="40" />
                <ToggleButton fx:id="insightButton" text="Insights" onAction="#onInsightsButtonClick"
                              styleClass="nav-button" minWidth="100" minHeight="40"/>
                <ToggleButton fx:id="timelimitButton" text="Time Limits" onAction="#onTimeLimitsButtonClick"
                              styleClass="nav-button" style="-fx-padding: 5px;" minWidth="100" minHeight="40"/>
                <ToggleButton fx:id="newAppButton" text="Add Program" onAction="#onNewAppButtonClick"
                              styleClass="nav-button" style="-fx-padding: 5px;" minWidth="100" minHeight="40"/>
                <Button fx:id="logoutButton" text="Log Out" onAction="#onLogoutButtonClick" styleClass="nav-button"
                        minWidth="100" minHeight="40"/>
            </VBox>
        </VBox>
    </HBox>

    <!-- main-view content -->
    <StackPane HBox.hgrow="ALWAYS">
        <Region prefHeight="10" />

        <!-- Home -->
        <HBox fx:id="homeContent" visible="true">
            <VBox>
                <Region prefHeight="20" />
                <Label text="Overview" id="headlines"/>
                <Region prefHeight="20" />
                <HBox>
                    <VBox style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 10px;"
                          spacing="10" prefWidth="260" prefHeight="230">
                        <Label text="Today" style="-fx-text-fill: grey;"/>

                        <!-- Add content here -->

                    </VBox>
                    <Region prefWidth="20" />
                    <VBox style="-fx-background-color: white;-fx-background-radius: 20px;-fx-padding: 10px;"
                          spacing="10" prefWidth="220" prefHeight="230">
                        <Label text="This Week" style="-fx-text-fill: grey;"/>

                        <!-- Add content here -->

                    </VBox>
                </HBox>

                <!-- Most used Apps -->
                <VBox>
                    <Region prefHeight="40" />
                    <Label text="Most Used Apps Today" id="headlines"/>
                    <Region prefHeight="20" />
                    <HBox>
                        <VBox style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              spacing="10" prefWidth="153" prefHeight="120">

                            <!-- Add content here -->
                            <Label fx:id="firstAppLabel"/>
                            <Label fx:id="firstTimeLabel" style="-fx-text-fill: grey;"/>

                        </VBox>
                        <Region prefWidth="20" />
                        <VBox style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              spacing="10" prefWidth="153" prefHeight="120">

                            <!-- Add content here -->
                            <Label fx:id="secondAppLabel"/>
                            <Label fx:id="secondTimeLabel" style="-fx-text-fill: grey;"/>

                        </VBox>
                        <Region prefWidth="20" />
                        <VBox style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;"
                              spacing="10" prefWidth="153" prefHeight="120">

                            <!-- Add content here -->
                            <Label fx:id="thirdAppLabel"/>
                            <Label fx:id="thirdTimeLabel" style="-fx-text-fill: grey;"/>

                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>


        <!-- _____________________________________________ -->

        <!-- Insights Content -->
        <VBox fx:id="insightsContent" visible="false">
            <VBox>
                <Region prefHeight="10" />
                <HBox>
                    <Button fx:id="columnChartButton" onAction="#onColumnChartButtonClick" text="Column Chart"/>
                    <Button fx:id="pieChartButton" onAction="#onPieChartButtonClick" text="Pie Chart"/>
                    <Button fx:id="barChartButton" onAction="#onBarChartButtonClick" text="Bar Chart"/>
                </HBox>
                <Region prefHeight="10" />
                <HBox fx:id="graphLocation" style="-fx-background-color: white;-fx-background-radius: 20px; -fx-padding: 10px;" spacing="10"
                      prefHeight="280" maxWidth="500">
                    <Label text="{Type of Chart}"/>

                    <!-- Add content here -->

                </HBox>
                <Region prefHeight="30" />
                <VBox>
                    <Label text="Most Used Apps Today" id="headlines"/>
                    <Region prefHeight="20" />
                    <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;"
                          spacing="10" prefHeight="35" maxWidth="500">
                        <Label text="{Some Info}"/>

                        <!-- Add content here -->

                    </HBox>
                    <Region prefHeight="10" />
                    <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;"
                          spacing="10" prefHeight="35" maxWidth="500">

                        <!-- Add content here -->

                    </HBox>
                    <Region prefHeight="10" />
                    <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;"
                          spacing="10" prefHeight="35" maxWidth="500">

                        <!-- Add content here -->

                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        <!-- _____________________________________________ -->

        <!-- Time Limits Content -->
        <VBox fx:id="timeLimitsContent" visible="false">
            <Region prefHeight="20" />
            <VBox>
                <Label text="Screen Time Limit" id="headlines"/>
                <Line startX="0" startY="0" endX="200" endY="0" stroke="grey" strokeWidth="1" />
                <Region prefHeight="20" />
                <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" spacing="10"
                      prefHeight="35" maxWidth="500">
                    <Label text="{Some Info}"/>

                    <!-- Add content here -->

                </HBox>
                <Region prefHeight="40" />
                <Label text="App Time Limit" id="headlines"/>
                <Line startX="0" startY="0" endX="170" endY="0" stroke="grey" strokeWidth="1" />
                <Region prefHeight="20" />
                <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" spacing="10"
                      prefHeight="35" maxWidth="500">

                    <!-- Add content here -->

                </HBox>
                <Region prefHeight="10" />
                <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" spacing="10"
                      prefHeight="35" maxWidth="500">

                    <!-- Add content here -->

                </HBox>
                <Region prefHeight="10" />
                <HBox style="-fx-background-color: white;-fx-background-radius: 5px; -fx-padding: 10px;" spacing="10"
                      prefHeight="35" maxWidth="500">

                    <!-- Add content here -->

                </HBox>
            </VBox>
        </VBox>

        <!-- _____________________________________________ -->

        <!-- Add Program Content -->
        <VBox fx:id="addProgramContent" visible="false">
            <Region prefHeight="20" />
            <VBox>
                <Label text="Add New Program" id="headlines"/>
                <Region prefHeight="20" />
                <Label text="Enter the program name" styleClass="instruction" />
                <TextField fx:id="appNameField" maxWidth="250" prefHeight="30"/>
                <Label text="Enter the program type (Game, Entertainment, Internet, Productive)" styleClass="instruction" />
                <TextField fx:id="appTypeField" maxWidth="250" prefHeight="30"/>
                <Label text="Enter time usage limit in minutes (0 if unlimited)" styleClass="instruction"/>
                <TextField fx:id="appLimitField" maxWidth="250" prefHeight="30"/>
            </VBox>
            <Label fx:id="errorLabel" styleClass="error-label" />
            <HBox alignment="BOTTOM_LEFT">
                <Button id="addAppButton" text="Add Application" onAction="#onAddAppButtonClick"/>
            </HBox>
        </VBox>
    </StackPane>

    <!-- Right Sidebar -->
    <HBox alignment="TOP_RIGHT">
        <VBox style="-fx-background-color: white;" prefWidth="180" prefHeight="530" alignment="TOP_CENTER">
            <Region prefHeight="30" />
            <HBox alignment="CENTER">
                <Label fx:id="welcomeLabel" text="Hello, {firstname}!" />

                    <!-- Firstname -->

                <Region prefHeight="30" />
            </HBox>
            <Line startX="0" startY="0" endX="140" endY="0" stroke="grey" strokeWidth="1" />
            <Region prefHeight="10" />
            <Label text="{Maybe some Chart}"/>
            <Region prefHeight="20" />
            <VBox alignment="CENTER_LEFT" style="-fx-padding:15px;">
                <Label text="Total Screen Time:"/>

                    <!-- Screen time -->

                <Region prefHeight="30" />
                <Line startX="0" startY="0" endX="140" endY="0" stroke="grey" strokeWidth="1" />
                <Label text="Apps" style="-fx-text-fill: grey;"/>
                <Region prefHeight="30" />

                    <!-- App -->
                    <!-- App -->
                    <!-- App -->

            </VBox>

        </VBox>
    </HBox>

</HBox>