<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DataPyramid.controller.TermsController">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
    </padding>

    <Label text="Please read through our terms and conditions. By using the application, you agree to the following:"
           wrapText="true"/>
    <TextArea fx:id="termsAndConditions" wrapText="true" editable="false" minHeight="400"/>
    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Button fx:id="backButton" text="Cancel" onAction="#onBackButtonClick"/>
        <Button fx:id="agreeButton" text="Next" onAction="#onNextButtonClick"/>
    </HBox>

</VBox>