<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<FlowPane alignment="CENTER" columnHalignment="CENTER" focusTraversable="true"
          maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseMoved="#onVisible" onMouseDragged="#onVisible"
          orientation="VERTICAL" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.DataPyramid.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER">
        <Label id="welcome" text="WELCOME" />
        <Label styleClass="header-2-label" text="to Your Wellbeing Tracker" />
        <Line endX="300" stroke="#3A592B" strokeWidth="2">
            <VBox.margin>
                <Insets top="10.0" bottom="10.0"/>
            </VBox.margin>
        </Line>
        <Label styleClass="header-3-label" text="Track, Monitor, and Improve your Wellbeing." textAlignment="CENTER"
               wrapText="true">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="signUpButton" onAction="#onSignupButtonClick" text="Sign Up" />
            <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Log In" />
        </HBox>
    </VBox>
</FlowPane>
