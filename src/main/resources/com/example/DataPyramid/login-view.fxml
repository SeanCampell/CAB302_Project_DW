<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>


<?import java.net.URL?>
<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DataPyramid.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox spacing="5.0">
            <Button fx:id="backButton" styleClass="back-button" text="ðŸ¡ " onAction="#onBackButtonClick"/>
            <Label text="Log In" styleClass="header-label" />
            <Region prefHeight="10"/>

            <Label text="Email address" styleClass="instruction"/>
            <TextField fx:id="emailField" maxWidth="250" prefHeight="30" style="-fx-font-weight: bold;"/>
            <Label text="Password" styleClass="instruction"/>
            <PasswordField fx:id="passwordField" maxWidth="250" prefHeight="30" style="-fx-font-weight: bold;"/>

            <Label fx:id="errorLabel" styleClass="error-label" />
            <HBox alignment="BOTTOM_LEFT">
                <Button fx:id="loginButton" id="signupButton" text="Log In" onAction="#onLoginButtonClick"/>
            </HBox>
            <HBox>
                <Label text="Don't have an account? " />
                <Label styleClass="label-link" text="Sign Up" onMouseClicked="#onSignUpButtonClick" />
            </HBox>
        </VBox>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <ImageView>
            <image>
                <Image url="https://images.squarespace-cdn.com/content/v1/5bdd6fad506fbe7eb2222dda/1684527260671-G2C9S6KWRB859LCISYCJ/Self-care+Note+Quote+Instagram+Post.png" />
            </image>
            <fitWidth>420</fitWidth>
            <fitHeight>440</fitHeight>
        </ImageView>
    </HBox>
</VBox>