<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>

<?import java.net.URL?>

<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxreadingdemo.SignUpController">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox spacing="5.0">
            <Button fx:id="backButton" text="ðŸ¡ " onAction="#onBackButtonClick"/>
            <Label text="Sign Up" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <Label text="Enter your first name" styleClass="signup-instruction" />
            <TextField fx:id="firstnameField" maxWidth="250" prefHeight="30"/>
            <Label text="Enter your last name" styleClass="signup-instruction" />
            <TextField fx:id="lastnameField" maxWidth="250" prefHeight="30"/>
            <Label text="Email address" styleClass="signup-instruction"/>
            <TextField fx:id="emailField" maxWidth="250" prefHeight="30"/>
            <Label text="Create password" styleClass="signup-instruction" />
            <PasswordField fx:id="passwordField" maxWidth="250" prefHeight="30"/>
            <Label text="Confirm password" styleClass="signup-instruction" />
            <PasswordField fx:id="confirmPasswordField" maxWidth="250" prefHeight="30"/>
            <HBox>
                <Label text="I agree to the"/>
                <Label styleClass="label-link" text="Terms &amp; Conditions." onMouseClicked="#onTermsButtonClick"/>
            </HBox>
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
            <HBox alignment="BOTTOM_LEFT">
                <Button fx:id="signupButton" id="signupButton" text="Sign Up" onAction="#onSignUpButtonClick"/>
            </HBox>
            <HBox>
                <Label text="Already have an account?" />
                <Label styleClass="label-link" text="Log In" />
            </HBox>
        </VBox>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <ImageView>
            <image>
                <Image url="https://images.squarespace-cdn.com/content/v1/5bdd6fad506fbe7eb2222dda/1684527260671-G2C9S6KWRB859LCISYCJ/Self-care+Note+Quote+Instagram+Post.png" />
            </image>
            <fitWidth>420</fitWidth>
            <fitHeight>440</fitHeight>
        </ImageView>
    </HBox>
</VBox>