<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.javafxreadingdemo.HelloController">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
<Label textAlignment="CENTER"/>
    <VBox alignment="CENTER">
        <Label id="welcome">WELCOME</Label>
        <Label text="to Your Wellbeing Tracker"/>
        <StackPane>
            <padding>
                <Insets top="5" />
            </padding>
            <Rectangle width="160" height="2" fill="GREY"/>
        </StackPane>
        <Label textAlignment="CENTER"
               text="Track, Monitor, and Improve your Wellbeing." wrapText="true" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="nextButton" id="start-button" text="Start" onAction="#onNextButtonClick"/>
        </HBox>
    </VBox>
</StackPane>