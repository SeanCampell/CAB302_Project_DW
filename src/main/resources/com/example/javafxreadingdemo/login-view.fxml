<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxreadingdemo.LoginController"
      style="-fx-background-color: #f3f3f3;">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox spacing="5.0">
            <Button fx:id="backButton" style="16px; -fx-text-fill: rgba(0, 0, 0, 0.8);" text="ðŸ¡ " onAction="#onBackButtonClick"/>
            <Label text="Log In" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region prefHeight="10"/>

            <Label text="Email address" style="-fx-font-size: 10px; -fx-text-fill: rgba(0, 0, 0, 0.5);"/>
            <TextField fx:id="emailField" maxWidth="250" prefHeight="30" style="-fx-font-weight: bold;"/>
            <Label text="Password" style="-fx-font-size: 10px; -fx-text-fill: rgba(0, 0, 0, 0.5);" />
            <PasswordField fx:id="passwordField" maxWidth="250" prefHeight="30" style="-fx-font-weight: bold;"/>

            <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
            <HBox alignment="BOTTOM_LEFT">
                <Button fx:id="loginButton" text="Log In" onAction="#onLoginButtonClick"
                        style="-fx-background-color: BLUE; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 250px; -fx-min-height: 35px; -fx-font-size: 11px;"/>
            </HBox>
            <HBox>
                <Label style="-fx-text-fill: black;" text="No account?" />
                <Label style="-fx-text-fill: BLUE;" text="Sign Up" onMouseClicked="#onSignUpButtonClick" />
            </HBox>
        </VBox>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <Region prefWidth="20"/>
        <ImageView>
            <image>
                <Image url="https://images.squarespace-cdn.com/content/v1/5bdd6fad506fbe7eb2222dda/1684527260671-G2C9S6KWRB859LCISYCJ/Self-care+Note+Quote+Instagram+Post.png" />
            </image>
            <fitWidth>420</fitWidth>
            <fitHeight>440</fitHeight>
        </ImageView>
    </HBox>
</VBox>